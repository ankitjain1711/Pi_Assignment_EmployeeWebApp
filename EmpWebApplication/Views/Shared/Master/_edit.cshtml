
<script src="~/js/edit.js"></script>

<form>

    <button type="button" id="btnmodeledit" style="display:none" class="btn btn-primary" data-bs-toggle="modal1" data-bs-target="#employeeModal">
        Edit Employee
    </button>


    <div id="myModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edit Employee</h5>
                    <button type="button" class="close" data-bs-dismiss="modal1" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Partial view content will be loaded here -->
                    <div class="form-group">
                        <label class="control-label"> First Name</label>
                        <input id="FirstName" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label class="control-label"> Last Name</label>
                        <input id="LastName" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label class="control-label">DOB</label>
                        <input type="datetime" id="DOB" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Gender</label>
                        <input id="Gender" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="DesignationId">Choose a Designation:</label>
                        <select id="DesignationId" name="DesignationId">
                            <option value="1">Developer</option>
                            <option value="2">TeamLead</option>
                            <option value="3">Manager</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="DeptId">Choose a Department:</label>
                        <select id="DeptId" name="DeptId">
                            <option value="1">HR</option>
                            <option value="2">IT</option>
                            <option value="3">Sales</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Salary</label>
                        <input id="Salary" class="form-control" />
                    </div>

                    <div>
                        <label>Select your Skills: </label> <br />
                        @foreach (var item in ViewBag.skills)
                        {
                            <label for="SkillName"> @item.SkillName </label>
                            <input type="checkbox" id="SkillName" name="SkillName" value="@item.SkillId">
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-secondary" data-bs-dismiss="modal">Close</a>
                    <a href="#" onclick="Save();return false" class="btn btn-primary">Save changes</a>
                </div>
            </div>
        </div>
    </div>
</form>